# Tenggeli Desert Monitoring Backend - Environment Variables
# Copy this file to .env for development or .env.production for production

# Application Settings
APP_NAME=Tenggeli Desert Monitoring API
DEBUG=true
SECRET_KEY=change-this-to-a-secure-random-key-in-production
LOG_LEVEL=INFO

# Data Paths
# For local development (relative paths)
DATA_PATH=../data
PROCESSED_DATA_PATH=../data/processed
CACHE_PATH=../data/cache

# Raw data location (Google Drive mount)
NDVI_RAW_DATA_PATH=/mnt/g/我的云端硬盘/tenggeli_data

# Database
DATABASE_URL=sqlite:///./tenggeli_monitoring.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Redis (optional)
REDIS_URL=

# CORS Settings - Add your frontend domains
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Region Bounds (Tenggeli Desert)
REGION_WEST=103.0
REGION_SOUTH=37.5
REGION_EAST=105.2
REGION_NORTH=39.0

